<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.sakaiproject.component.app.postem.data.HeadingImpl" table="SAKAI_POSTEM_HEADINGS">

		<composite-id>
      		<key-property name="gradebookId" column="gradebook_id" type="long" />
      		<key-property name="location" column="location" type="integer" />
    </composite-id>

		<property name="headingTitle" type="string">
			<column name="heading" not-null="true" />
		</property>

	</class>

</hibernate-mapping>
