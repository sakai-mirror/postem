<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>postem-base</artifactId>
    <groupId>org.sakaiproject</groupId>
    <version>2.6.0RC1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <name>Sakai Postem Tool</name>
  <groupId>org.sakaiproject</groupId>
  <artifactId>sakai-postem-tool</artifactId>
  <organization>
    <name>Sakai Project</name>
    <url>http://sakaiproject.org/</url>
  </organization>
  <inceptionYear>2004</inceptionYear>
  <packaging>war</packaging>

    <!-- profiles added for WAS support -->
    <profiles>
        <profile>
            <id>full</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                  <groupId>org.sakaiproject</groupId>
                  <artifactId>sakai-jsf-myfaces-tool</artifactId>
                  <version>2.6.0RC1-SNAPSHOT</version>
                  <exclusions>
                    <!-- since postem doesnt work with the latest myfaces we have to replace the library -->
                    <exclusion>
                      <groupId>org.apache.myfaces.core</groupId>
                      <artifactId>myfaces-api</artifactId>
                    </exclusion>
                    <exclusion>
                      <groupId>org.apache.myfaces.core</groupId>
                      <artifactId>myfaces-impl</artifactId>
                    </exclusion>
                  </exclusions>
                  <type>pom</type>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <!-- exclude xerces xml parser apis for WAS -->
            <id>was</id>
            <dependencies>
                <dependency>
                  <groupId>org.sakaiproject</groupId>
                  <artifactId>sakai-jsf-myfaces-tool</artifactId>
                  <version>2.6.0RC1-SNAPSHOT</version>
                  <exclusions>
                    <exclusion>
                        <groupId>jsf</groupId>
                        <artifactId>jsf-api</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>jsf</groupId>
                        <artifactId>jsf-impl</artifactId>
                    </exclusion>
                    <!-- since postem doesnt work with the latest myfaces we have to replace the library -->
                    <exclusion>
                      <groupId>org.apache.myfaces.core</groupId>
                      <artifactId>myfaces-api</artifactId>
                    </exclusion>
                    <exclusion>
                      <groupId>org.apache.myfaces.core</groupId>
                      <artifactId>myfaces-impl</artifactId>
                    </exclusion>
                  </exclusions>
                  <type>pom</type>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

  <dependencies>
    <!-- postem requires and older version of myfaces -->
    <dependency>
      <groupId>myfaces</groupId>
      <artifactId>myfaces</artifactId>
      <version>1.0.9</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.sakaiproject.kernel</groupId>
      <artifactId>sakai-kernel-util</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject.kernel</groupId>
      <artifactId>sakai-kernel-api</artifactId>
    </dependency>
<!--
      This has been relocated to sakai-kernel-util
      org.sakaiproject.kernel.utilsakai-util-->
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-postem-api</artifactId>
    </dependency>
<!--org.sakaiprojectsakai-site-api${sakai.version}-->
<!--org.sakaiprojectsakai-tool-api${sakai.version}-->
<!--org.sakaiprojectsakai-util-api${sakai.version}-->
<!--org.sakaiprojectsakai-entity-api${sakai.version}-->
<!--org.sakaiprojectsakai-util${sakai.version}-->
<!--org.sakaiprojectsakai-authz-api${sakai.version}-->
<!--org.sakaiprojectsakai-user-api${sakai.version}-->
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
    </dependency>
<!--javax.servletservlet-api${sakai.servletapi.version}-->
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>jsp-api</artifactId>
      <version>2.0</version>
    </dependency>
<!--javax.servletservlet-api${sakai.servletapi.version}-->
  </dependencies>
  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/bundle</directory>
        <includes>
          <include>**/*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>
  </build>
</project>
